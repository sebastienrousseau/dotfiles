#!/bin/sh
# Interactive Tour using Gum
# Part of Dotfiles v0.2.474

if ! command -v gum >/dev/null; then
    echo "Error: 'gum' is not installed."
    echo "Run: brew install gum"
    exit 1
fi

clear

# Intro
