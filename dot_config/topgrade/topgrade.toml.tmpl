# Topgrade configuration (managed by chezmoi)

[misc]
{{- if eq .chezmoi.os "darwin" }}
disable = ["vim", "node", "containers", "flatpak", "snap"]
{{- else }}
disable = ["vim", "node", "containers", "firmware", "fwupd"]
{{- end }}
pre_sudo = true
cleanup = true
skip_notify = true

[commands]
{{- if eq .chezmoi.os "linux" }}
"Open WebUI" = "sudo /usr/local/bin/update-open-webui.sh"
{{- end }}

[linux]
autoremove = true

[pip]
# Use uv for faster pip updates (installed via pipx/mise)
mode = "uv"

[cargo]
# Use cargo-install-update for installed crates
cargo_update = true
