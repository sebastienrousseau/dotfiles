# Auto-detect text files and normalize line endings
* text=auto

# Shell scripts must use LF (Unix line endings)
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf

# Config files - LF
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.conf text eol=lf
*.tmpl text eol=lf

# Documentation - LF
*.md text eol=lf
*.txt text eol=lf

# Git/editor configs - LF
.gitattributes text eol=lf
.gitignore text eol=lf
.editorconfig text eol=lf

# Windows-specific files - CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files - do not modify
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.woff binary
*.woff2 binary
*.ttf binary
*.otf binary

# LFS-managed files
*.cert filter=lfs diff=lfs merge=lfs -text
*.crt filter=lfs diff=lfs merge=lfs -text
*.pem filter=lfs diff=lfs merge=lfs -text
*.{exe,dmg,pkg,deb,rpm,app,bin} filter=lfs diff=lfs merge=lfs -text
