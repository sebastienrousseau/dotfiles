{
    "author": "Sebastien Rousseau (https://github.com/sebastienrousseau)",
    "bugs": {
        "url": "https://github.com/sebastienrousseau/dotfiles/issues"
    },
    "contributors": [
        "Graham Colgate (https://github.com/gramtech)"
    ],
    "dependencies": {
        "@changesets/cli": "^2.24.4"
    },
    "description": "Dotfiles - A set of Mac OS X configuration files - Simply designed to fit your shell life.",
    "devDependencies": {
        "pnpm": "^7.12.2"
    },
    "keywords": [
        "dotfiles",
        "bash",
        "bash-profile",
        "macos",
        "macosx",
        "shell",
        "homebrew",
        "dotfiles-resources"
    ],
    "license": "MIT",
    "license_URI": "http://www.opensource.org/licenses/mit-license.php",
    "name": "@sebastienrousseau/dotfiles",
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/"
    },
    "repository": "https://github.com/sebastienrousseau/dotfiles.git",
    "scripts": {
        "backup": "pnpm run bk:dir && pnpm run bk:bsh && pnpm run bk:zsh",
        "bk:bsh": "if [ -z $HOME/.bashrc ]; then mv -f $HOME/.bashrc $HOME/.dotfiles_backup/bashrc.bk; fi ",
        "bk:dir": "if [ -d $HOME/.dotfiles ]; then mv -f $HOME/.dotfiles $HOME/dotfiles_backup; fi ",
        "bk:zsh": "if [ -z $HOME/.zshrc ]; then mv -f $HOME/.zshrc $HOME/.dotfiles_backup/zshrc.bk; fi ",
        "build": "pnpm run backup && pnpm run directory && pnpm run copy",
        "clean": "rm -viR $HOME/.dotfiles/",
        "copy": "pnpm run cp:dirs && pnpm run cp:bash && pnpm run cp:prof && pnpm run cp:tmux && pnpm run cp:curl && pnpm run cp:cert && pnpm run cp:vimr && pnpm run cp:wget && pnpm run cp:zshr",
        "cp:bash": "cp ./shell/bash/bashrc $HOME/.bashrc",
        "cp:cert": "cp ./shell/plugins/curl/cacert.pem $HOME/cacert.pem",
        "cp:curl": "cp ./shell/plugins/curl/curlrc $HOME/.curlrc",
        "cp:dirs": "cp -R ./shell $HOME/.dotfiles/shell ",
        "cp:jsht": "cp ./shell/plugins/jshint/jshintrc $HOME/.jshintrc",
        "cp:prof": "cp ./shell/plugins/profile/profile $HOME/.profile",
        "cp:tmux": "cp ./shell/plugins/tmux/tmux $HOME/.tmux.conf",
        "cp:vimr": "cp ./shell/plugins/vim/vimrc $HOME/.vimrc",
        "cp:wget": "cp ./shell/plugins/wget/wgetrc $HOME/.wgetrc",
        "cp:zshr": "cp ./shell/plugins/zsh/zshrc $HOME/.zshrc",
        "directory": "mkdir $HOME/.dotfiles",
				"release:version": "pnpm changeset version && pnpm install --no-frozen-lockfile",
				"release:publish": "pnpm publish -r --report-summary",
        "test": "echo \"No test specified\""
    },
    "version": "0.2.450"
}
